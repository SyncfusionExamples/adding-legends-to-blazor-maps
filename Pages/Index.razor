@page "/"


<SfMaps>
    <MapsTitleSettings Text="Covid-19 Affected Countries"></MapsTitleSettings>
    <MapsLegendSettings Visible="true" Position="LegendPosition.Right" Alignment="Alignment.Far"
                        Shape="LegendShape.Rectangle" ShapeHeight="20" ShapeWidth="15"
                        ShowLegendPath="LegendVisibility" Mode="LegendMode.Interactive" InvertedPointer="true">
        <MapsToggleLegendSettings Enable="true" ApplyShapeSettings="false">
            <MapsToggleLegendBorder Width="2"  Color="red">

            </MapsToggleLegendBorder>

        </MapsToggleLegendSettings>

    </MapsLegendSettings>
    <MapsLayers>
        <MapsLayer ShapeData='new {dataOptions= "https://cdn.syncfusion.com/maps/map-data/world-map.json"}'
                   TValue="CountryData" ShapePropertyPath='new string[] {"name"}' ShapeDataPath="Name"
                   DataSource="@StatusDetails">
            <MapsShapeSettings ColorValuePath="ShapeColor" Fill="#E5E5E5">
                <!--<MapsShapeSettings ColorValuePath="SeverityLevel" Fill="#E5E5E5">-->
                    @*<MapsShapeColorMappings>
            <MapsShapeColorMapping Color='new string[] {"#a69d70"}' Value="High"></MapsShapeColorMapping>
            <MapsShapeColorMapping Color='new string[] {"#A4D6AD"}' Value="Moderate"
                                   ShowLegend="false">
            </MapsShapeColorMapping>
            <MapsShapeColorMapping Color='new string[] {"#DEEBAE"}' Value="Low"></MapsShapeColorMapping>
        </MapsShapeColorMappings>*@
                <!--</MapsShapeSettings>-->
                </MapsShapeSettings>
</MapsLayer>
    </MapsLayers>
</SfMaps>


